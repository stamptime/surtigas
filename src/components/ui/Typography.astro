---
import { cn } from "@/utils/cn";

interface Props {
  as?: keyof HTMLElementTagNameMap;
  variant?: 'primary' | 'secondary' | 'muted';
  class?: string;
}

const { as = 'p', class: className } = Astro.props;

---
<astro:fragment>
    {as === 'p' && <p class={cn("text-xl leading-tight text-white", className)}><slot/></p>}
    {as === 'h1' && <h1 class={cn("text-3xl leading-tight text-white font-black", className)}><slot/></h1>}
    {as === 'h2' && <h2 class={`text-2xl font-black text-white ${className}`}><slot/></h2>}
    {as === 'h3' && <h3 class={`text-xl font-medium ${className}`}><slot/></h3>}
    {as === 'span' && <span class={className}><slot/></span>}
</astro:fragment>